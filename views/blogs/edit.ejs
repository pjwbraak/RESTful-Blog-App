<% include ../partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header"><h2 class="ui dividing header">Edit blog</h2></div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]"><%= blog.body %></textarea>
        </div>
        <!--submit button-->
        <input class="ui primary button" type="submit" value="Submit">
        <!--delete button - opens the modal-->
        <a class="ui red button" id="deleteBlogButton"><i class="trash alternate icon"></i>Delete</a> <!-- does not align yet on phone -->
        <!--back button-->
        <div class="extra">
        <a class="ui floated secondary button" href="/blogs/<%= blog._id %>">
            <i class="left chevron icon"></i>Go back
        </a>
    </div>
    </form>
</div>

<br>

<!--modal for deleting blog -->
    <div class="ui modal">
        <div class="header">
          Delete Blog
        </div>
        <div class="image content">
            <div class="description">
                <div class="ui header">Are you sure you want to delete this Blog?</div>
                <p>You are about to delete the following Blog:</p>
                <h3><%= blog.title %></h3>
                <p>If you proceed you will permanently remove this Blog. This action cannot be undone!</p>
            </div>
        </div>
        <div class="actions">
            <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                <button class="ui red button">
                    <i class="trash alternate icon"></i>
                    Delete
                </button>
                <a class="ui floated secondary button" href="/blogs/<%= blog._id %>/edit">
                    <i class="left chevron icon"></i>Go back
                </a>
            </form>
            <br>
        </div>
    </div>

<% include ../partials/footer %>